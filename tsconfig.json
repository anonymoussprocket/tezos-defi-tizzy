{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,

        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": false
    },
    "exclude": [ "node_modules" ],
    "include": [ "src" ]
}